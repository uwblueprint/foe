<p id="notice"><%= notice %></p>

<h1>Sightings</h1>

<table>
  <thead>
    <tr>
      <th>Weather</th>
      <th>Habitat</th>
      <th>Date</th>
      <th>Species</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sightings.each do |sighting| %>
      <tr>
        <td><%= sighting.weather %></td>
        <td><%= sighting.habitat %></td>
        <td><%= sighting.date %></td>
        <td><%= sighting.species %></td>
        <td><%= sighting.latitude %></td>
        <td><%= sighting.longitude %></td>
        <td><%= link_to 'Show', sighting %></td>
        <td><%= link_to 'Edit', edit_sighting_path(sighting) %></td>
        <td><%= link_to 'Destroy', sighting, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
